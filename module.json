{
	"name": "Twitch Chat",
	"type": "WebSocket Client",
	"path": "Software",
	"version": "0.0.3",
	"description": "To control your twitch chat",
	"url": "https://github.com/DrMicka/TwitchChat-ChataigneModule",
	"downloadURL": "https://github.com/DrMicka/TwitchChat-ChataigneModule/archive/master.zip",
	"hasInput": true,
	"hasOutput": true,
	"hideDefaultCommands": true,
	"hideDefaultParameters": [
		"autoAdd",
		"protocol",
		"messageStructure",
		"firstValueIsTheName",
		"useSecureConnection",
	],
   "parameters": {
		"Channel Name": {
			"type": "String",
		},
		"Client ID": {
			"type": "String",
		},
		"OAuth redirect URL": {
			"type": "String",
			"default":"http://localhost:3000",
		},
		"Give me OAuth": {
			"type":"Trigger",
		},
		"Received OAuth": {
			"type": "String",
		},
		"Identified": {
			"type": "Boolean",
			"readOnly":true,
			"default":false,
		},
   },
   "defaults": {
		"Protocol": "Lines",
		"autoAdd": false,
		"serverPath": "ws://irc-ws.chat.twitch.tv:80",
   },
	"values": {
		"Last pseudo message": {
			"type":"String",
		},
		"Last message": {
			"type":"String",
		},
	},
   "scripts": [
      "Twitchat.js"
   ],
	"commands": {
		"Write message": {
			"menu": "",
			"callback": "Privmsg",
			"parameters": {
				"Message to send": {
					"type": "String"
				}
			}
		},
		"Commande": {
			"menu": "",
			"callback": "Commande",
			"parameters": {
				"data": {
					"type": "String"
				}
            },
		},
	}
}

